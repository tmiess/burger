<body>
    {{{ body }}}
</body>

<script>
    /*global $*/
    $(function() {
        $('#submit').click(function() {
            var createBurger = $('#createBurger').val().trim();
            if (createBurger) {
                $.ajax({
                    method: 'POST',
                    url: '/',
                    data: { createBurger: createBurger },
                    traditional: true
                }).done(function() {
                    location.reload();
                });
            }
        });
        $('.devour').click(function() {
            var eatThisBurger = $(this).data('id');
            console.log(eatThisBurger);
            $.ajax({
                method: 'PUT',
                url: '/',
                data: { updateBurger: eatThisBurger },
                traditional: true
            }).done(function() {
                location.reload();
            });
        });
    });
</script>

</html>
